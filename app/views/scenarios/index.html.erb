</div>

<hr>

    <div class="container my-5">
    <h1 class="text-center text-white mb-4">Scenarios</h1>
    <div class="row">
        <% @scenarios.each do |scenario| %>
        <div class="col-md-4 mb-4">
            <div class="card bg-dark text-white shadow">
            <div class="card-body">
                <h5 class="card-title"><%= scenario.title %></h5>
                <p class="card-text"><%= scenario.description %></p>
                <%= link_to 'View Scenario', scenario_path(scenario), class: 'btn btn-success' %>
            </div>
            </div>
        </div>
        <% end %>
    </div>
    </div>
</body>

<hr>
<div class="mt-3 d-flex justify-content-center">
  <%= link_to 'Home', root_path, class: 'btn btn-outline-success' %>
</div>
